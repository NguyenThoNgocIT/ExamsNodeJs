<%- include('../partials/header') %>

<div class="container mx-auto my-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= product.name %></h2>
    <img src="<%= product.images[0] || 'https://via.placeholder.com/150' %>" 
         alt="<%= product.name %>" 
         class="w-full h-64 object-cover rounded mb-4">
    <p class="text-gray-700 mb-4"><%= product.description %></p>
    <p class="text-blue-600 font-bold text-lg mb-4">$<%= product.price %></p>
    <a href="/products/update/<%= product._id %>" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Edit</a>
    <form action="/products/delete/<%= product._id %>" method="POST" class="inline-block">
      <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Delete</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
