<%- include('../partials/header') %>

<div class="container mx-auto my-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">Edit Product</h2>
  <form action="/products/update/<%= product._id %>" method="POST" class="bg-white p-6 rounded-lg shadow-md">
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-bold">Name</label>
      <input type="text" id="name" name="name" value="<%= product.name %>" class="w-full border border-gray-300 rounded px-4 py-2" required>
    </div>
    <div class="mb-4">
      <label for="price" class="block text-gray-700 font-bold">Price</label>
      <input type="number" id="price" name="price" value="<%= product.price %>" class="w-full border border-gray-300 rounded px-4 py-2" required>
    </div>
    <div class="mb-4">
      <label for="description" class="block text-gray-700 font-bold">Description</label>
      <textarea id="description" name="description" rows="4" class="w-full border border-gray-300 rounded px-4 py-2" required><%= product.description %></textarea>
    </div>
    <div class="mb-4">
      <label for="slug" class="block text-gray-700 font-bold">Slug</label>
      <input type="text" id="slug" name="slug" value="<%= product.slug %>" class="w-full border border-gray-300 rounded px-4 py-2" required>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Update</button>
  </form>
</div>

<%- include('../partials/footer') %>
